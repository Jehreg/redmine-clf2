  <tr class="<%= cycle("odd", "even") %> <%= css_project_classes(project) %>">
	<td class="name" style="padding-left: <%= project.level * 2 %>em;"><p><%= link_to(h(project.name), :controller => 'projects', :action => 'show', :id => project) %></p></td>
	<td>
      <%= textilizable(truncate_words(project.description, 50), :project => project)%>
      <%= link_to(l(:clf2_text_read_more),
                  :controller => 'projects',
                  :action => 'show',
                  :id => project) unless project.short_description.empty? %>
    </td>
  </tr>
